{% extends 'api/v1/baseBackoffice.html.twig' %}

{% block title %}Spot index
{% endblock %}

{% block body %}

	<div class="main">
		<h1>Spot index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Slug</th>
					<th>Name</th>
					<th>Place</th>
					<th>CreatedAt</th>
					<th>UpdatedAt</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for spot in spots %}
					<tr>
						<td>{{ spot.id }}</td>
						<td>{{ spot.slug }}</td>
						<td>{{ spot.name }}</td>
						<td>{{ spot.place }}</td>
						<td>{{ spot.createdAt ? spot.createdAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ spot.updatedAt ? spot.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>
							<a href="{{ path('app_api_v1_spot_show', {'id': spot.id}) }}">show</a>
							<a href="{{ path('app_api_v1_spot_edit', {'id': spot.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_api_v1_spot_new') }}">Create new</a>
	{% endblock %}
