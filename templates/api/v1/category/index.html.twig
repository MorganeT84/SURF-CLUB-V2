{% extends 'api/v1/baseBackoffice.html.twig' %}

{% block title %}Category index
{% endblock %}

{% block body %}

	<div class="main">
		<h1>Category index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Slug</th>
					<th>Name</th>
					<th>CreatedAt</th>
					<th>UpdatedAt</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td>{{ category.id }}</td>
						<td>{{ category.slug }}</td>
						<td>{{ category.name }}</td>
						<td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>
							<a href="{{ path('app_api_v1_category_show', {'id': category.id}) }}">show</a>
							<a href="{{ path('app_api_v1_category_edit', {'id': category.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_api_v1_category_new') }}">Create new</a>
	{% endblock %}
