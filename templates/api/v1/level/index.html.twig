{% extends 'api/v1/baseBackoffice.html.twig' %}

{% block title %}Level index
{% endblock %}

{% block body %}

	<div class="main">
		<h1>Level index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Slug</th>
					<th>Name</th>
					<th>CreatedAt</th>
					<th>UpdatedAt</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for level in levels %}
					<tr>
						<td>{{ level.id }}</td>
						<td>{{ level.slug }}</td>
						<td>{{ level.name }}</td>
						<td>{{ level.createdAt ? level.createdAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ level.updatedAt ? level.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>
							<a href="{{ path('app_api_v1_level_show', {'id': level.id}) }}">show</a>
							<a href="{{ path('app_api_v1_level_edit', {'id': level.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_api_v1_level_new') }}">Create new</a>
	{% endblock %}
