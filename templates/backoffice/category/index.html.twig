{% extends 'Backoffice/baseBackoffice.html.twig' %}

{% block title %}Liste des disciplines
{% endblock %}

{% block body %}

	<div class="main">
		<h1>Liste des disciplines</h1>
		<button type="button" class="btn btn-warning">
			<a href="{{ path('app_backoffice_session_index') }}">Retour Session</a>
		</button>

		<button type="button" class="btn btn-warning">
			<a href="{{ path('app_backoffice_category_new') }}">Nouvelle discipline</a>
		</button>

		<table class="table table-light table-bordered table-hover">
			<thead>
				<tr>
					<th>Name</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td>{{ category.name }}</td>
						<td>
							<button type="button" class="btn btn-info">
								<a href="{{ path('app_backoffice_category_show', {'id': category.id}) }}">Info</a>
							</button>
							<button type="button" class="btn btn-danger">
								<a href="{{ path('app_backoffice_category_edit', {'id': category.id}) }}">Modifier</a>
							</button>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
 
	{% endblock %}
